{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    /* The "typeRoots" configuration specifies the locations where 
       TypeScript looks for type definitions (.d.ts files) to 
       include in the compilation process.*/
    "typeRoots": [
      "./dist/index.d.ts",
      "./dist/package/types.d.ts",
      "node_modules/@types"
    ]
  },
  /* include /index.ts*/
  "include": ["./index.ts", "package/**/*", "demo/src/vite-env.d.ts"],
  "exclude": ["demo", "public"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
